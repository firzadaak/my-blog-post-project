<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Authentication</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="auth-container">
    <% if (error) { %>
      <p class="error"><%= error %></p>
    <% } %>
    <!-- Login Form -->
    <div id="login-form" class="auth-card">
      <h2>Login</h2>
      <form action="/login" method="POST">
        <div class="input-group">
          <!-- Email Icon (Envelope) -->
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#666" class="icon">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0119.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.678 4.74a2.25 2.25 0 01-2.504 0L1.57 8.658A2.25 2.25 0 01.75 6.75V6.75z" />
          </svg>
          <input type="email" name="email" placeholder="Enter your email" required>
        </div>
        <div class="input-group">
          <!-- Lock Icon -->
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#666" class="icon">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
          </svg>
          <input type="password" name="password" id="login-password" placeholder="Enter your password" required minlength="6">
          <!-- Eye Toggle -->
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#666" class="eye-icon" onclick="togglePassword('login-password', this)">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.207 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
        <label class="checkbox-label">
          <input type="checkbox" name="remember"> Remember me
        </label>
        <button type="submit">Login</button>
      </form>
      <p class="switch-link">Not a member? <a href="#" onclick="showSignup()">Signup Now</a></p>
    </div>

    <!-- Signup Form -->
    <div id="signup-form" class="auth-card" style="display: none;">
      <h2>Registration</h2>
      <form action="/register" method="POST" id="signupForm">
        <div class="input-group">
          <!-- User Icon (Person) -->
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#666" class="icon">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.727 0-5.258-.97-7.499-2.632z" />
          </svg>
          <input type="text" name="name" placeholder="Enter your name" required>
        </div>
        <div class="input-group">
          <!-- Email Icon (Envelope) -->
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#666" class="icon">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0119.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.243a2.25 2.25 0 01-1.07 1.916l-7.678 4.74a2.25 2.25 0 01-2.504 0L1.57 8.658A2.25 2.25 0 01.75 6.75V6.75z" />
          </svg>
          <input type="email" name="email" placeholder="Enter your email" required>
        </div>
        <div class="input-group">
          <!-- Lock Icon -->
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#666" class="icon">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
          </svg>
          <input type="password" name="password" id="signup-password" placeholder="Create a password" required minlength="6">
          <!-- Eye Toggle -->
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#666" class="eye-icon" onclick="togglePassword('signup-password', this)">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.207 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
        <div class="input-group">
          <!-- Lock Icon -->
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#666" class="icon">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6.75a4.5 4.5 0 10-9 0v3.75m-.75 11.25h10.5a2.25 2.25 0 002.25-2.25v-6.75a2.25 2.25 0 00-2.25-2.25H6.75a2.25 2.25 0 00-2.25 2.25v6.75a2.25 2.25 0 002.25 2.25z" />
          </svg>
          <input type="password" name="confirmPassword" id="signup-confirm" placeholder="Confirm a password" required minlength="6">
          <!-- Eye Toggle -->
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="#666" class="eye-icon" onclick="togglePassword('signup-confirm', this)">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.207 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
        </div>
        <label class="checkbox-label">
          <input type="checkbox" id="terms" required>
          I accepted all terms and conditions
        </label>
        <button type="submit" id="signupBtn" disabled>Signup</button>
      </form>
      <p class="switch-link">Already a member? <a href="#" onclick="showLogin()">Login Now</a></p>
    </div>
  </div>

  <script>
    // Toggle between login and signup
    function showSignup() {
      document.getElementById('login-form').style.display = 'none';
      document.getElementById('signup-form').style.display = 'block';
    }
    function showLogin() {
      document.getElementById('signup-form').style.display = 'none';
      document.getElementById('login-form').style.display = 'block';
    }

    // Toggle password visibility (show/hide)
    function togglePassword(inputId, eyeElement) {
      const input = document.getElementById(inputId);
      if (input.type === "password") {
        input.type = "text";
        // Switch to eye-slash SVG
        eyeElement.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" d="M3.98 8.223A10.477 10.477 0 001.934 12C3.226 16.338 7.244 19.5 12 19.5c4.756 0 8.773-3.162 10.065-7.477m-5.833 3.533a3 3 0 11-4.464-4.464m-7.788-2.07A10.48 10.48 0 0112 4.5c4.756 0 8.773 3.162 10.065 7.477a10.48 10.48 0 01-4.464 5.46m-3.6-8.94a3 3 0 11-4.464 4.464"/>'
      } else {
        input.type = "password";
        // Switch back to eye SVG
        eyeElement.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 010-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.207 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />';
      }
    }

    // Enable signup button only if terms are accepted
    document.getElementById('terms').addEventListener('change', function() {
      document.getElementById('signupBtn').disabled = !this.checked;
    });
  </script>
</body>
</html>